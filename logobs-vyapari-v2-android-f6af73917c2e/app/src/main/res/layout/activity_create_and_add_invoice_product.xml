<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <include layout="@layout/toolbar" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:adjustViewBounds="true"
            android:background="#F4F4F4"
            android:scaleType="fitXY" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/select_product_dfs_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/select_product_dfs_bottom"
        android:layout_below="@+id/toolbarLayout"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <LinearLayout
                android:id="@+id/select_product_dfs_top_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textview_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/TYPE" />

                    <in.co.vyapari.ui.generic.MySpinner
                        android:id="@+id/select_product_type_sp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:spinnerMode="dropdown"
                        android:textColor="@color/font_5" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:alpha="0.5"
                        android:scaleType="fitXY"
                        android:src="@drawable/border_line" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/select_product_hsnsaccode_tv"
                        style="@style/textview_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/HSN" />

                    <Button
                        android:id="@+id/select_product_hsnsac_code"
                        style="@style/button_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/please_select"
                        android:textColor="@color/font_5"
                        android:textColorHint="@color/font_5" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:alpha="0.5"
                        android:scaleType="fitXY"
                        android:src="@drawable/border_line" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textview_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/GST_CODE" />

                    <in.co.vyapari.ui.generic.MySpinner
                        android:id="@+id/select_product_gst_code"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:spinnerMode="dropdown"
                        android:textColor="@color/font_5" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:alpha="0.5"
                        android:scaleType="fitXY"
                        android:src="@drawable/border_line" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textview_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/CESS_CODE" />

                    <in.co.vyapari.ui.generic.MySpinner
                        android:id="@+id/select_product_cess_code"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:spinnerMode="dropdown"
                        android:textColor="@color/font_5" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:alpha="0.5"
                        android:scaleType="fitXY"
                        android:src="@drawable/border_line" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textview_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/PRODUCT_NAME" />

                    <EditText
                        android:id="@+id/select_product_dfs_name"
                        style="@style/edittext_1"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/font_5"
                        android:textColorHint="@color/font_5" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:alpha="0.5"
                        android:scaleType="fitXY"
                        android:src="@drawable/border_line" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textview_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/PRODUCT_BARCODE" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/select_product_dfs_barcode"
                            style="@style/edittext_1"
                            android:layout_width="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="5dp"
                            android:layout_toStartOf="@+id/qr_mag_icon"
                            android:layout_toLeftOf="@+id/qr_mag_icon"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/font_5"
                            android:textColorHint="@color/font_5" />

                        <ImageView
                            android:id="@+id/qr_mag_icon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/ico_barcode" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:alpha="0.5"
                        android:scaleType="fitXY"
                        android:src="@drawable/border_line" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textview_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/PRODUCT_CODE" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/select_product_dfs_code"
                            style="@style/edittext_1"
                            android:layout_width="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="5dp"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/font_5"
                            android:textColorHint="@color/font_5" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:alpha="0.5"
                        android:scaleType="fitXY"
                        android:src="@drawable/border_line" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/textview_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/UNIT_SET" />

                        <in.co.vyapari.ui.generic.MySpinner
                            android:id="@+id/select_product_dfs_unit_sp"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:spinnerMode="dropdown"
                            android:textColor="@color/font_5" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:alpha="0.5"
                            android:scaleType="fitXY"
                            android:src="@drawable/border_line" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textview_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/UNIT" />

                    <in.co.vyapari.ui.generic.MySpinner
                        android:id="@+id/select_product_dfs_subunit_sp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:spinnerMode="dropdown"
                        android:textColor="@color/font_5" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:alpha="0.5"
                        android:scaleType="fitXY"
                        android:src="@drawable/border_line" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/elect_product_purchases_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="@string/PURCHASE_PRICE"
                    android:textColor="@color/font_5"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/textview_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/UNIT_PRICE" />

                        <in.co.vyapari.ui.generic.currencyedittext.CurrencyEditText
                            android:id="@+id/select_product_dfs_purchase_price"
                            style="@style/edittext_1"
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:inputType="numberDecimal"
                            android:textColor="@color/font_5"
                            android:textColorHint="@color/font_5" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:alpha="0.5"
                            android:scaleType="fitXY"
                            android:src="@drawable/border_line" />
                    </LinearLayout>

                    <!--        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/textview_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/EXCHANGE_RATE" />

                                <in.co.vyapari.ui.generic.MySpinner
                                    android:id="@+id/select_product_dfs_purchase_currency_sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center"
                                    android:spinnerMode="dropdown"
                                    android:textColor="@color/font_5" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="5dp"
                                    android:alpha="0.5"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/border_line" />
                            </LinearLayout>-->
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/elect_product_sales_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="@string/SALE_PRICE"
                    android:textColor="@color/font_5"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/textview_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/UNIT_PRICE" />

                        <in.co.vyapari.ui.generic.currencyedittext.CurrencyEditText
                            android:id="@+id/select_product_dfs_sale_price"
                            style="@style/edittext_1"
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:inputType="numberDecimal"
                            android:textColor="@color/font_5"
                            android:textColorHint="@color/font_5" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:alpha="0.5"
                            android:scaleType="fitXY"
                            android:src="@drawable/border_line" />
                    </LinearLayout>
                    <!--
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:visibility="gone"
                                        android:layout_marginLeft="10dp"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            style="@style/textview_1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/EXCHANGE_RATE" />

                                        <in.co.vyapari.ui.generic.MySpinner
                                            android:id="@+id/select_product_dfs_sale_currency_sp"
                                            android:layout_width="match_parent"
                                            android:layout_height="20dp"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="5dp"
                                            android:gravity="center"
                                            android:spinnerMode="dropdown"
                                            android:textColor="@color/font_5" />

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:layout_marginTop="5dp"
                                            android:alpha="0.5"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/border_line" />
                                    </LinearLayout>-->
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="TAX"
                android:textColor="@color/font_5"
                android:textStyle="bold"
                android:visibility="gone" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:alpha="0.5"
                android:scaleType="fitXY"
                android:src="@drawable/border_line"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="GST Included"
                    android:textColor="@color/font_5" />

                <in.co.vyapari.ui.generic.MySwitch
                    android:id="@+id/select_product_dfs_gst_include"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:scaleType="fitXY"
                android:src="@drawable/border_line"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="@string/QUANTITY"
                android:textColor="@color/font_5"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/select_product_dfs_remove_count"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_remove" />

                    <EditText
                        android:id="@+id/select_product_dfs_count_et"
                        style="@style/edittext_1"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="1"
                        android:textColor="@color/font_5"
                        android:textColorHint="@color/font_5"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/select_product_dfs_add_count"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_add" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:alpha="0.5"
                    android:scaleType="fitXY"
                    android:src="@drawable/border_line" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="@string/DISCOUNT_INFO"
                android:textColor="@color/font_5"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textview_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/DISCOUNT_TYPE" />

                    <in.co.vyapari.ui.generic.MySpinner
                        android:id="@+id/select_product_dfs_discount_sp"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:spinnerMode="dropdown"
                        android:textColor="@color/font_5" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:alpha="0.5"
                        android:scaleType="fitXY"
                        android:src="@drawable/border_line" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/select_product_dfs_discount_value_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textview_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/DISCOUNT" />

                    <EditText
                        android:id="@+id/select_product_dfs_discount_value_et"
                        style="@style/edittext_1"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/font_5"
                        android:textColorHint="@color/font_5" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:alpha="0.5"
                        android:scaleType="fitXY"
                        android:src="@drawable/border_line" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="@string/DESCRIPTION"
                    android:textColor="@color/font_5"
                    android:textStyle="bold" />

                <TextView
                    style="@style/textview_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/DESCRIPTION" />

                <EditText
                    android:id="@+id/select_product_dfs_description"
                    style="@style/edittext_1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:alpha="0.5"
                    android:scaleType="fitXY"
                    android:src="@drawable/border_line" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/select_product_dfs_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <include layout="@layout/view_bottom" />

        <Button
            android:id="@+id/select_product_dfs_submit_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/soho_blue"
            android:text="@string/add"
            android:textColor="@android:color/white" />
    </LinearLayout>
</RelativeLayout>