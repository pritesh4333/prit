<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:gravity="center"
            android:layout_weight="1">
            <VideoView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:id="@+id/vv_video"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
             >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1f1f1f"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="2"
                 >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.7"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/input_video"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/input_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.3"

                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="1">
                        <ImageView
                            android:id="@+id/input_options"
                            style="@style/ActionBarButtonStyle"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/ic_gallery" />
                    </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:orientation="horizontal">



                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Gallery"
                            android:textSize="12sp"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#1f1f1f"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="5dp" >

                <LinearLayout
                    android:id="@+id/outoutinfo_showcase"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.2"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/output_video"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/output_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="1">
                        <ImageView
                            android:id="@+id/output_share"
                            style="@style/ActionBarButtonStyle"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:scaleType="center"
                            android:background="@drawable/ic_share" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="1">
                        <ImageView
                            android:id="@+id/output_options"
                            style="@style/ActionBarButtonStyle"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:scaleType="center"
                            android:background="@drawable/ic_setting" />
                    </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal">



                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Share"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/resolutiontext"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Resolution"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/convert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="54dp"
                android:text="@string/convert"
                android:textColor="@color/primary_dark"
                android:backgroundTint="@color/accent"
                android:textSize="16sp" />

            <Button
                android:id="@+id/video_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click hear to se output"
                android:visibility="gone"
                android:textSize="16sp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/green"
                android:textColor="#FFFFFF"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/compress_adview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
<!--            <com.google.android.gms.ads.AdView-->
<!--                android:id="@+id/adView"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                ads:adSize="FULL_BANNER"-->
<!--                android:background="@color/primary_dark"-->
<!--                ads:adUnitId="@string/banner_home_footer">-->
<!--            </com.google.android.gms.ads.AdView>-->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>