<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CurrencyEditText">
        <attr name="allow_negative_values" format="boolean" />
        <attr name="decimal_digits" format="integer" />
    </declare-styleable>

    <declare-styleable name="PDFViewPager">
        <attr name="assetFileName" format="string" /> <!-- Load PDF from Asset -->
        <attr name="pdfUrl" format="string" /> <!-- Load PDF from remote URL -->
        <attr name="scale" format="float" /> <!-- Set initial scale for PDF -->
    </declare-styleable>

    <declare-styleable name="GifView">
        <attr name="gif" format="reference" />
        <attr name="paused" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CustomTheme">
        <attr name="gifViewStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="BottomSheetLayout">
        <attr name="collapsedHeight" format="dimension"/>
    </declare-styleable>
</resources>