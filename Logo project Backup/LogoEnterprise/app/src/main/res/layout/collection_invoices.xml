<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >


    <RelativeLayout
        android:id="@+id/item_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/invoices_item_top_year_rl"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/invoice_item_date_area_bg" />

            <TextView
                android:id="@+id/invoices_item_top_year_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="2018"
                android:textColor="@color/white" />
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/arap_item_mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/invoices_item_top_year_rl"
            android:background="@color/colorPrimary"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="15dp">
<LinearLayout
android:orientation="vertical"
    android:id="@+id/collectionItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/invoices_item_price"
                android:layout_toStartOf="@+id/invoices_item_price"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/invoices_item_firm_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="roboto-medium"
                    android:maxLines="3"
                    android:text="LOGO KOBİ DİJİTAL HİZMETLER A.Ş"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/invoices_item_invoice_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="roboto-medium"
                        android:text="09 JANUARY"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/invoices_item_invoice_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="roboto-medium"
                        android:text=" - DRAFT"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
</LinearLayout>
            <com.robinhood.ticker.TickerView
                android:id="@+id/invoices_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:fontFamily="roboto-medium"
                android:gravity="end"
                android:maxLines="1"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:textStyle="bold"
                app:ticker_animationDuration="1000"
                app:ticker_defaultCharacterList="number"
                tools:text="$123.45" />

        </RelativeLayout>




    <RelativeLayout
        android:id="@+id/invoices_item_bottom_rl"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/arap_item_mid"
        />

    <View
        android:id="@+id/invoices_item_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/arap_item_mid"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/colorAccent" />
</RelativeLayout>

</LinearLayout>