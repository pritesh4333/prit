<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/login_bg" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/register_top_logo"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="50dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/vyapari_logo" />

            <LinearLayout
                android:id="@+id/register_inner_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_top_logo"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/account_type"
                        android:textColor="@android:color/white" />

                    <RadioGroup
                        android:id="@+id/account_type_options"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/company_rb"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="@string/company2"
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/chartered_accountant_rb"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text="@string/chartered_accountant"
                            android:textColor="@color/white" />
                    </RadioGroup>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/line_1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/registerpage_input_name"
                            style="@style/edittext_5"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:hint="@string/name"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:nextFocusDown="@+id/registerpage_input_surname"
                            android:singleLine="true" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/line_1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/registerpage_input_surname"
                            style="@style/edittext_5"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:hint="@string/surname"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:singleLine="true" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/line_1" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/registerpage_input_email"
                        style="@style/edittext_5"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:singleLine="true" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/line_1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/registerpage_input_phone"
                        style="@style/edittext_5"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:hint="@string/phone"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:singleLine="true" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/line_1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/registerpage_input_password"
                        style="@style/edittext_5"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:hint="@string/password2"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:singleLine="true" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/line_1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/registerpage_input_password2"
                        style="@style/edittext_5"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:hint="@string/password2"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:singleLine="true" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/line_1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/registerpage_mid_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/gstintext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/gstin_register_msg"
                        android:textColor="@android:color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/registerpage_input_gstin"
                                style="@style/edittext_5"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_gravity="center_vertical"
                                android:layout_toStartOf="@+id/registerpage_check_bt"
                                android:hint="@string/GSTIN"
                                android:inputType="textCapSentences"
                                android:maxLines="1"
                                android:singleLine="true" />

                            <Button
                                android:id="@+id/registerpage_check_bt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/ripple_effect_1"
                                android:text="Validate"
                                android:textAllCaps="false"
                                android:textColor="@color/white" />
                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/line_1" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gstin_valid_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/Company_Name"
                                style="@style/edittext_5"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_gravity="center_vertical"
                                android:hint="@string/company_name"
                                android:inputType="textCapWords"
                                android:maxLines="1"
                                android:nextFocusDown="@+id/registerpage_input_surname"
                                android:singleLine="true"
                                android:textColor="@color/light_grey" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/line_1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/province"
                                style="@style/edittext_5"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_gravity="center_vertical"
                                android:hint="@string/Province"
                                android:inputType="textCapWords"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/light_grey" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/line_1" />
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/GST_reg_type"
                                style="@style/edittext_5"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_gravity="center_vertical"
                                android:hint="@string/gst_reg_type"
                                android:inputType="textCapWords"
                                android:maxLines="1"
                                android:nextFocusDown="@+id/registerpage_input_surname"
                                android:singleLine="true"
                                android:textColor="@color/light_grey" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/line_1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/orgnisation_type"
                                style="@style/edittext_5"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_gravity="center_vertical"
                                android:hint="@string/Organisation_type"
                                android:inputType="textCapWords"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/light_grey" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/line_1" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/registerpage_bottom_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <EditText
                            android:id="@+id/registerpage_address"
                            style="@style/edittext_5"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:hint="@string/address_2" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:scaleType="fitXY"
                            android:src="@color/border_5" />

                        <EditText
                            android:id="@+id/registerpage_postal_code"
                            style="@style/edittext_5"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:hint="@string/postal_code"
                            android:maxLines="1"
                            android:singleLine="true" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:scaleType="fitXY"
                            android:src="@color/border_5" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sector"
                            android:textColor="@android:color/white" />

                        <in.co.vyaparienterprise.ui.generic.MySpinner
                            android:id="@+id/registerpage_sector_sp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/white"
                            android:gravity="center"
                            android:spinnerMode="dropdown" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:scaleType="fitXY"
                            android:src="@color/border_5" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/companysector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/SectorOther"
                            style="@style/edittext_5"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:layout_toStartOf="@+id/promocodeapply"
                            android:hint="@string/other"
                            android:inputType="textCapSentences"
                            android:maxLines="1"
                            android:singleLine="true" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:scaleType="fitXY"
                            android:src="@color/border_5" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/promocode"
                                style="@style/edittext_5"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_gravity="center_vertical"
                                android:layout_toStartOf="@+id/promocodeapply"
                                android:hint="@string/promocode"
                                android:inputType="textCapSentences"
                                android:maxLines="1"
                                android:singleLine="true" />

                            <Button
                                android:id="@+id/promocodeapply"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/ripple_effect_1"
                                android:text="@string/applycode"
                                android:textAllCaps="false"
                                android:textColor="@color/white" />
                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/line_1" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/promodistributor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/Promo_Distributor"
                            style="@style/edittext_5"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:layout_toStartOf="@+id/promocodeapply"
                            android:hint="@string/promo"
                            android:inputType="textCapSentences"
                            android:maxLines="1"
                            android:singleLine="true" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:scaleType="fitXY"
                            android:src="@color/border_5" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/compnaylogo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:background="@drawable/box_border_reg">

                            <ImageView
                                android:id="@+id/addcompany_logo"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/icon_add_blue" />
                            <ImageView
                                android:id="@+id/company_logo_img"
                                android:layout_width="130dp"
                                android:layout_height="100dp" />




                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/companylogo"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:scaleType="fitXY"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/line_1" />

                    <LinearLayout
                        android:id="@+id/signature"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:background="@drawable/box_border_reg">
                            <ImageView
                                android:id="@+id/addcompany_singView"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/icon_add_blue" />
                        <ImageView
                            android:id="@+id/signature_logo"
                            android:layout_width="130dp"
                            android:layout_height="100dp"
                             />
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:orientation="vertical">



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/signature"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/company_sing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/company_singView"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/register_agreement"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/gstin_valid_data"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/registerpage_usage_contract"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:buttonTint="@color/white" />

                    <TextView
                        android:id="@+id/register_agreement_tv"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/usage_contract_message"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <Button
                    android:id="@+id/registerpage_register"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/register_agreement"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/login_button_bg"
                    android:text="@string/register"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>