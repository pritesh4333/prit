<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/toolbar_left_icon"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <ImageView
            android:id="@+id/toolbar_left_icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="20dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:tint="@color/black"
            android:src="@drawable/horizontallines" />

        <TextView
            android:id="@+id/toolbar_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:autoLink="all"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@color/toolbar_text_color"
            android:maxLines="1"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/Filter"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="20dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:layout_marginRight="25dp"
            android:layout_centerInParent="true"
            android:tint="@color/black"
            android:visibility="invisible"
            android:backgroundTint="@color/black"
            android:background="@drawable/ico_share" />
        <ImageView
            android:id="@+id/Inventry_update"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="20dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:tint="@color/black"
            android:visibility="invisible"
            android:backgroundTint="@color/black"
            android:background="@drawable/ico_big_dots" />
    </RelativeLayout>
</RelativeLayout>