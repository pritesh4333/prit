<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="15dp"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <RelativeLayout
                android:id="@+id/product_item_letter_point"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_red"
                android:visibility="gone" />

            <TextView
                android:id="@+id/product_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="roboto"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/select_product_dfs_remove_count"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_remove" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:alpha="0.5"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/border_line" />

                    <EditText
                        android:id="@+id/product_item_inventory"
                        style="@style/edittext_5"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/box_1_bg"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:layout_centerInParent="true"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:singleLine="true"
                        android:text="0"
                        android:maxLength="6"
                        android:textColor="@color/black"
                        android:textColorHint="@color/white"
                        android:textSize="12sp" />
                </RelativeLayout>


                <ImageView
                    android:id="@+id/select_product_dfs_add_count"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_add" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/invoices_item_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/arap_item_mid"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/colorAccent" />


</LinearLayout>