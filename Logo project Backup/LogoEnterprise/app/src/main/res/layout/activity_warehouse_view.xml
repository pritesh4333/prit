<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical">

    <include layout="@layout/toolbar_detail_firm" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/left_menu_bg"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/content_firm_add_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25dp"
                    android:orientation="vertical">



                    <TextView
                        style="@style/textview_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:text="@string/ADDRESS" />

                    <EditText
                        android:id="@+id/create_firm_address"
                        style="@style/edittext_1"
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:focusable="false"
                        android:layout_height="80dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:scaleType="fitXY"
                        android:src="@color/border_5" />
                    <TextView
                        style="@style/textview_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:text="@string/PINCODE" />

                    <EditText
                        android:id="@+id/warehouse_pincode"
                        style="@style/edittext_1"
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:focusable="false"
                     />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:scaleType="fitXY"
                        android:src="@color/border_5" />
                    <LinearLayout
                        android:id="@+id/create_firm_country_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/textview_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorAccent"
                                android:text="@string/COUNTRY" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:orientation="horizontal">

                                <in.co.vyaparienterprise.ui.generic.MySpinner
                                    android:id="@+id/create_firm_country_sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:backgroundTint="@color/white"
                                    android:gravity="center"
                                    android:spinnerMode="dropdown" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/create_firm_state_area"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/textview_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorAccent"
                                android:text="@string/STATE" />

                            <in.co.vyaparienterprise.ui.generic.MySpinner
                                android:id="@+id/create_firm_state_sp"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:backgroundTint="@color/white"
                                android:spinnerMode="dropdown" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:scaleType="fitXY"
                        android:src="@color/border_5" />

                    <LinearLayout
                        android:id="@+id/create_firm_city_dist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/textview_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorAccent"
                                android:text="@string/CITY" />

                            <in.co.vyaparienterprise.ui.generic.MySpinner
                                android:id="@+id/create_firm_city_sp"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:backgroundTint="@color/white"
                                android:spinnerMode="dropdown" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:scaleType="fitXY"
                                android:src="@color/border_5" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:orientation="horizontal">

                        <Switch
                            android:id="@+id/isactive_warehouse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/isactive"
                            style="@style/textview_1"
                            android:checked="true"
                            android:textColor="@color/colorAccent"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>







        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>