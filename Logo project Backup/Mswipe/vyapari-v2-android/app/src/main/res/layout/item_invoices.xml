<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">

    <!--Bottom View For Right to Left-->
    <LinearLayout
        android:id="@+id/bottom_wrapper"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <!-- Draft -->
        <LinearLayout
            android:id="@+id/bottom_wrapper_draft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:weightSum="2"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#FFFFFF">
                <ImageView
                    android:id="@+id/btnedit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:src="@drawable/ic_edit"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#FFFFFF">
                <ImageView
                    android:id="@+id/btndelete"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:src="@drawable/ic_delete"/>
            </LinearLayout>
        </LinearLayout>


        <!-- Approved -->
        <LinearLayout
            android:id="@+id/bottom_wrapper_approved"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#FFFFFF">
                <ImageView
                    android:id="@+id/btnprint"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:src="@drawable/ic_print1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Another Bottom View For Left to Right -->

    <LinearLayout
        android:id="@+id/bottom_wrapper1"
        android:layout_marginLeft="15dp"
        android:layout_width="70dp"
       android:gravity="center"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/btnpayemnt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:gravity="center"
            android:src="@drawable/ic_payment" />
        <ImageButton
            android:id="@+id/btnprrove"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:gravity="center"
            android:src="@drawable/ic_approve" />
    </LinearLayout>

    <!-- Another Bottom View For Left to Right -->
    <RelativeLayout
        android:id="@+id/item_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/invoices_item_top_year_rl"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/item_top_bg">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/invoice_item_date_area_bg" />

            <TextView
                android:id="@+id/invoices_item_top_year_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="2018"
                android:textColor="@color/white" />
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/invoices_item_mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/invoices_item_top_year_rl"
            android:background="@drawable/item_mid_bg"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/invoices_item_price"
                android:layout_toStartOf="@+id/invoices_item_price"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/invoices_item_firm_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="roboto-medium"
                    android:maxLines="3"
                    android:text="LOGO KOBİ DİJİTAL HİZMETLER A.Ş"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/invoices_item_invoice_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="roboto-medium"
                        android:text="09 JANUARY"
                        android:textColor="@color/date_color"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/invoices_item_invoice_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="roboto-medium"
                        android:text=" - DRAFT"
                        android:textColor="@color/date_color"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <com.robinhood.ticker.TickerView
                android:id="@+id/invoices_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:fontFamily="roboto-medium"
                android:gravity="end"
                android:maxLines="1"
                android:textColor="@color/price_color"
                android:textSize="16sp"
                android:textStyle="bold"
                app:ticker_animationDuration="1000"
                app:ticker_defaultCharacterList="number"
                tools:text="$123.45" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/invoices_item_bottom_rl"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/invoices_item_mid"
            android:background="@drawable/item_bottom_bg" />

        <View
            android:id="@+id/invoices_item_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/invoices_item_mid"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#f2f2f2" />
    </RelativeLayout>



</com.daimajia.swipe.SwipeLayout>