<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f2f2f2">

    <RelativeLayout
        android:id="@+id/top_bar_REL_content"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/topbar_background">

        <TextView
            android:id="@+id/topbar_LBL_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="card sale"
            android:textColor="@color/white"
            android:textSize="29sp"
            android:visibility="visible"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="fill_parent"
        android:layout_below="@+id/top_bar_REL_content"
        android:background="@drawable/ms_round_rect_layout_bg_white"
        android:layout_margin="@dimen/page_padding"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <!-- the widgets for the Amount -->

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fadeScrollbars="false">

                <LinearLayout
                    android:id="@+id/pay_REL_saledetails"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/payment_LNR_username"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/payment_TXT_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="start"
                            android:hint="username"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal"
                            android:maxLength="10"
                            android:paddingRight="6dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/light_grey"
                            android:textSize="22sp"
                            android:typeface="sans" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/payment_LNR_password"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/payment_TXT_password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="start"
                            android:hint="password"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal"
                            android:maxLength="6"
                            android:paddingRight="6dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/light_grey"
                            android:textSize="22sp"
                            android:typeface="sans" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/payment_LNR_amount"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/payment_TXT_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="start"
                            android:gravity="right|center_vertical"
                            android:hint="amount"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal"
                            android:maxLength="10"
                            android:paddingRight="6dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/light_grey"
                            android:textSize="22sp"
                            android:typeface="sans" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/payment_LNR_firstsidigits"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                      <!--  <EditText
                            android:id="@+id/payment_TXT_firstsidigits"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="start"
                            android:gravity="right|center_vertical"
                            android:hint="first six digits"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal"
                            android:maxLength="6"
                            android:paddingRight="6dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/light_grey"
                            android:textSize="22sp"
                            android:typeface="sans" />-->

                        <EditText
                            android:id="@+id/payment_TXT_firstsidigits"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="start"
                            android:hint="first six digits"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal"
                            android:maxLength="6"
                            android:paddingRight="6dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/light_grey"
                            android:textSize="22sp"
                            android:typeface="sans" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/payment_LBL_countrycodeprefix"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="(+91)"
                            android:textColor="#777777"
                            android:textSize="22sp"
                            android:typeface="sans">
                        </TextView>

                        <EditText
                            android:id="@+id/payment_TXT_mobileno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="start"
                            android:hint="Mobile No."
                            android:textColorHint="@color/light_grey"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="10"
                            android:paddingLeft="6dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:typeface="sans">
                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/payment_TXT_receipt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="start"
                            android:gravity="center_vertical"
                            android:hint="Invoice No."
                            android:textColorHint="@color/light_grey"
                            android:imeOptions="actionNext"
                            android:maxLength="30"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:typeface="sans">
                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/payment_TXT_notes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:hint="Notes"
                            android:textColorHint="@color/light_grey"
                            android:imeOptions="actionNext"
                            android:maxLength="2000"
                            android:minLines="1"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:typeface="sans">
                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal">

                        <Button
                            android:id="@+id/payment_BTN_amt_next"
                            android:layout_width="100dp"
                            android:layout_height="44dp"
                            android:background="@drawable/mswipe_roundrectblue"
                            android:gravity="center"
                            android:text="pay"
                            android:textColor="#ffffff"
                            android:textSize="25dp"
                            android:typeface="sans"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>