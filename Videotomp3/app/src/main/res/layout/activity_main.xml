<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent"
    android:orientation="vertical"
    tools:context=".View.MainActivity">
    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gv_folder"
        android:numColumns="3"
        android:horizontalSpacing="1dp"
        android:verticalSpacing="1dp"
        android:stretchMode="columnWidth"
        android:background="@color/primary_dark"
        android:visibility="gone"
        ></GridView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:weightSum="1"
            android:orientation="horizontal">



            <Button
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:id="@+id/videlist"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@color/silver"
                android:text="Video Files"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"></TextView>
            <Button
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:id="@+id/myfiles"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@color/silver"
                android:text="MP3 Files"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.8"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/videotompbg" />
            <!--  This is your template view -->

        </LinearLayout>
        <TextView
            android:id="@+id/more_apps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="More Apps"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/black"></TextView>
        <LinearLayout
            android:id="@+id/banneradd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <!--            <com.google.android.gms.ads.AdView-->
            <!--                android:id="@+id/adView"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="match_parent"-->

            <!--                android:layout_gravity="bottom"-->

            <!--                android:background="@color/primary_dark"-->
            <!--                 >-->
            <!--            </com.google.android.gms.ads.AdView>-->
        </LinearLayout>

    </LinearLayout>
</LinearLayout>