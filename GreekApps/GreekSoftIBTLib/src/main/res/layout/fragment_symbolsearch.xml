<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/search_symbol_layout"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/asset_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <!--<arcadiaiew.GreekTextView
            style="@style/BoldStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/market_grey"
            android:gravity="center"
            android:padding="5dp"
            android:text="Asset Type"
            android:textSize="14sp"/>-->
        <Spinner
            android:id="@+id/exchange"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:transitionGroup="true"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/assetTypeSpinner"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:singleLine="true" />

        <Spinner
            android:id="@+id/instNameSpinner"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:visibility="gone" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <View
            android:id="@+id/upperLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_effect_view">

            <com.acumengroup.mobile.symbolsearch.DelayAutoCompleteTextView
                android:id="@+id/search_text"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@android:color/transparent"
                android:fontFamily="@string/GREEK_TEXTVIEW_FONT"
                android:hint="@string/SS_SEARCH_HINT_TXT"
                android:imeOptions="flagNoExtractUi|actionSearch"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/_13sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|end"
                android:layout_marginRight="5dp">

                <ProgressBar
                    android:id="@+id/pb_loading_indicator"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/srch_img"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_effect_view"
                    app:srcCompat="@drawable/ic_search_white_24dp" />

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

    <View
        android:id="@+id/lowerLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white" />

    <com.acumengroup.ui.textview.GreekTextView
        android:id="@+id/recent_search_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="12sp"
        android:text="@string/SS_RECENT_SEARCH_TXT"
        android:textColor="@color/white"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_border" />



    <ListView
        android:id="@+id/watchlist_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />

    <RelativeLayout
        android:id="@+id/relative_extend"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/fnoCurrencyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <!-- <View
                     android:layout_width="0dp"
                     android:layout_height="2dp"
                     android:layout_gravity="center_vertical"
                     android:layout_weight="1"
                     android:background="@color/common_red_bg"/>-->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/currencyFnoExpiry"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:singleLine="true" />

                    <com.acumengroup.ui.textview.GreekTextView
                        android:id="@+id/tvExpiry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="* EXPIRY DATE"
                        android:textColor="@color/white" />

                </LinearLayout>

                <!-- <View
                     android:layout_width="0dp"
                     android:layout_height="2dp"
                     android:layout_gravity="center_vertical"
                     android:layout_weight="1"
                     android:background="@color/common_red_bg"/>-->

            </LinearLayout>

            <com.acumengroup.pagersliderlib.PagerSlidingTabStrip
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/demat_strip"
                app:pstsIndicatorColor="@color/white"
                app:pstsIndicatorHeight="@dimen/tabIndicatorHeight"
                app:pstsShouldExpand="true"
                app:pstsTextAllCaps="false" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.viewpager.widget.ViewPager>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/commodityView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/common_red_bg"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/common_red_bg"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/commodityExpiry"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:singleLine="true" />

                    <com.acumengroup.ui.textview.GreekTextView
                        android:id="@+id/exptxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="* EXPIRY DATE" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/common_red_bg"
                    android:visibility="gone" />
            </LinearLayout>

            <ListView
                android:id="@+id/commodityListview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="@null" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_results_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:background="@color/common_red_bg" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.acumengroup.ui.textview.GreekTextView
                    android:id="@+id/recent_search_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/SS_RECENT_SEARCH_TXT"
                    android:textColor="@color/red_textcolor" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/common_red_bg" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/common_red_bg" />

            <ListView
                android:id="@+id/search_results"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="@null" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>