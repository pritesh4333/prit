<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topheader_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/bajaj_gray"
    android:orientation="horizontal"
    android:padding="10dp">

    <com.acumengroup.ui.textview.GreekTextView
        android:id="@+id/txt_parent_header"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:text="Group Header"
        android:layout_gravity="start|left"
        android:gravity="start|left"
        android:textColor="@color/white"
        android:textSize="16sp" />



    <ImageView
        android:id="@+id/direction_arrow"
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:layout_height="20dp"
        android:layout_gravity="end|right"
        android:gravity="end|right"
        app:srcCompat="@drawable/recycle_down_arrow" />


</LinearLayout>
