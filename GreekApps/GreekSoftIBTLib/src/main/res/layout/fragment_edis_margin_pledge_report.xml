<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edis_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bajaj_black"
    android:orientation="vertical"
    tools:context=".reports.LedgerDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dashboard_bg"
        android:background="@color/bajaj_gray"
        android:orientation="horizontal"
        android:padding="5dp">

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/txt_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:maxLines="1"
            android:singleLine="true"
            android:text="E-PLEDGE DASHBOARD "
            android:textAllCaps="true"
            android:textColor="@color/white" />

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/cost_report_txt_ttlPNL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="4 JUNE 2020 | 5.15 AM"
            android:textColor="@color/date_color" />


        <ImageButton
            android:id="@+id/sort_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_filter_white"
            android:gravity="center"
            android:visibility="invisible" />


    </LinearLayout>
    <Spinner
        android:id="@+id/dpledge_spinner"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10sdp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/horizonscroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.3">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/column_bg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@color/bajaj_blue"
                    android:orientation="horizontal">


                    <com.acumengroup.ui.textview.GreekTextView
                        android:id="@+id/dscript_name"
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="start"
                        android:text="Scrip Name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold">

                    </com.acumengroup.ui.textview.GreekTextView>


                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:background="@color/white" />

                    <com.acumengroup.ui.textview.GreekTextView
                        android:id="@+id/disin"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:text="ISIN"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold">

                    </com.acumengroup.ui.textview.GreekTextView>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:background="@color/white" />

                    <com.acumengroup.ui.textview.GreekTextView
                        android:id="@+id/dfree_qty"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:text="Free Qty"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold">

                    </com.acumengroup.ui.textview.GreekTextView>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:background="@color/white" />


                    <com.acumengroup.ui.textview.GreekTextView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold">

                    </com.acumengroup.ui.textview.GreekTextView>


                    <com.acumengroup.ui.textview.GreekTextView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold">

                    </com.acumengroup.ui.textview.GreekTextView>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:background="@color/white" />

                    <com.acumengroup.ui.textview.GreekTextView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:text="Rate"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold">

                    </com.acumengroup.ui.textview.GreekTextView>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:background="@color/white" />

                    <com.acumengroup.ui.textview.GreekTextView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:text="Value"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold">

                    </com.acumengroup.ui.textview.GreekTextView>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <!--                    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout-->
                    <!--                        android:id="@+id/refreshList"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="match_parent">-->

                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_width="match_parent"

                            android:layout_height="match_parent"
                            android:nestedScrollingEnabled="false"
                            android:visibility="visible" />

                    </androidx.core.widget.NestedScrollView>

                    <!--                    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>-->

                    <com.acumengroup.ui.textview.GreekTextView
                        android:id="@+id/txt_error_msg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/GREEK_NO_DATA_MSG"
                        android:textColor="@color/white"
                        android:visibility="gone" />

                </RelativeLayout>


            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/dtotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_4sdp"
                android:layout_weight="1"
                android:text="Total 0.00"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold">

            </com.acumengroup.ui.textview.GreekTextView>

            <com.acumengroup.ui.button.GreekButton
                android:id="@+id/prc_to_cdsl"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_4sdp"
                android:layout_weight="1"
                android:background="@drawable/single_line_border_bajaj"
                android:text="PLEDGE FOR MARGIN"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>