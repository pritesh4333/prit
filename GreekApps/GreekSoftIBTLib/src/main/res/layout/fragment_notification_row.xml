<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="1dp">

    <LinearLayout
        android:id="@+id/chat_left_msg_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/my_message"
        android:orientation="vertical">

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/txt_sender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:paddingTop="5dp"
            android:text="Admin"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/chat_left_msg_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:elevation="2dp"
            android:paddingLeft="25dp"
            android:paddingRight="20dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="12sp" />

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:paddingBottom="5dp"
            android:text="12:44 am"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:paddingLeft="25dp"
            android:textSize="10sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_right_msg_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/my_message"
        android:orientation="vertical">

        <!--<TextView-->
        <!--android:id="@+id/chat_right_msg_text_view"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_margin="10dp"-->
        <!--android:background="@drawable/my_message"-->
        <!--android:elevation="2dp"-->
        <!--android:padding="5dp"-->
        <!--android:textColor="@color/white"-->
        <!--android:textSize="12dp" />-->

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/chat_right_msg_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:elevation="2dp"
            android:paddingLeft="25dp"
            android:paddingRight="20dp"
            android:text="dvklnsvdsvdsvdnslvsnlsvklnsvldvnvkdlslsssklsssvnsvdv"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/txt_timeSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:paddingBottom="5dp"
            android:text="12:44 am"
            android:paddingLeft="20dp"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>