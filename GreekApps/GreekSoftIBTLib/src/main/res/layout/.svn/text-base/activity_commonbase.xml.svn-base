<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.acumengroup.mobile.GreekBaseActivity">

    <include
        android:id="@+id/include"
        layout="@layout/pip_activity" />

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.acumengroup.mobile.actionbar.GreekActionBar
                android:id="@+id/actionBarCommon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@+id/activityFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/navigation"
                android:layout_below="@id/actionBarCommon">

            </FrameLayout>


            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/bajaj_gray"
                android:theme="@style/Widget.BottomNavigationView14"
                app:itemBackground="@drawable/navbar_backcolor"
                app:itemIconTint="@drawable/navbar_textcolor"
                app:itemTextColor="@drawable/navbar_textcolor"
                app:labelVisibilityMode="labeled"
                app:menu="@menu/bottom_navigation_menu">

            </com.google.android.material.bottomnavigation.BottomNavigationView>
            <!---->
            <RelativeLayout
                android:id="@+id/customDotProgress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#AA000000"
                android:clickable="true"
                android:gravity="center"
                android:visibility="gone">


                <com.acumengroup.ui.textview.GreekTextView
                    android:id="@+id/dotprogressTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

            </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/menuLayout"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:orientation="vertical">

            <include layout="@layout/row_menu_header" />

            <ExpandableListView
                android:id="@+id/homeGridView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bajaj_gray"
                android:cacheColorHint="@color/market_depth_dark"
                android:childDivider="#000"
                android:childIndicatorLeft="16dp"
                android:choiceMode="singleChoice"
                android:divider="#000"
                android:dividerHeight="1dp"
                android:groupIndicator="@null"
                android:scrollbars="none" />

        </LinearLayout>


    </androidx.drawerlayout.widget.DrawerLayout>

    <include layout="@layout/bottom_sheet_layout" />

    <com.acumengroup.mobile.MovableFloatingActionButton
        android:id="@+id/movablefab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:visibility="gone"
        app:backgroundTint="@color/common_red_bg"
        app:srcCompat="@drawable/ic_notifications_white_24dp"
        tools:ignore="VectorDrawableCompat" />

    <RelativeLayout
        android:id="@+id/customProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AA000000"
        android:clickable="true"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="center">

        <ProgressBar
            android:id="@+id/pBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/bull"

            />

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/progressTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pBar"
            android:layout_centerHorizontal="true"
            android:text="Loading"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:visibility="gone" />
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>