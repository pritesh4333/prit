<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bajaj_gray"
    android:id="@+id/parent_layout"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/imgICon"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
           />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:src="@drawable/user_profile"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="vertical">

                <com.acumengroup.ui.textview.GreekTextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"/>

                <com.acumengroup.ui.textview.GreekTextView
                    android:id="@+id/username_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <com.acumengroup.ui.textview.GreekTextView
        android:id="@+id/headerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="AUTHORIZE YOUR TRANSACTION"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold">

    </com.acumengroup.ui.textview.GreekTextView>

    <com.acumengroup.ui.textview.GreekTextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:baselineAligned="false"
        android:padding="@dimen/_5sdp"

        android:textColor="@color/white"
        android:textSize="@dimen/_11sdp">

    </com.acumengroup.ui.textview.GreekTextView>

    <com.acumengroup.ui.button.GreekButton
        android:id="@+id/btn_to_cdsl"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/single_line_border_bajaj"
        android:text="Generate TPIN"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:weightSum="2">


        <com.acumengroup.ui.button.GreekButton
            android:id="@+id/btn_authorization"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/single_line_border_bajaj"
            android:text="Manage Authorization"
            android:textColor="@color/white"
            android:textSize="@dimen/_9sdp"
            android:textStyle="bold" />

        <com.acumengroup.ui.button.GreekButton
            android:id="@+id/forgot_tpin"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/single_line_border_bajaj"
            android:text="Forgot your TPIN"
            android:textColor="@color/white"
            android:textSize="@dimen/_9sdp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>