<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/transaction_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/common_red_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <com.acumengroup.ui.textview.GreekTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:text="Action"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">


            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/action_item1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Add to Watchlist"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/action_item2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Set Alert"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/action_item3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Advance Chart"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/action_item4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Product Change"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:visibility="gone" />

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/action_item5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Product Change"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:visibility="gone" />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
