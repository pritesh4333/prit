<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bajaj_gray"
        app:cardBackgroundColor="@color/bajaj_gray"
        app:cardElevation="@dimen/_5sdp">


        <LinearLayout
            android:id="@+id/delete_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bajaj_gray"
            android:orientation="vertical">

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/delete_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:text="Delete Watchlist"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:visibility="visible" />


            <View
                android:layout_width="wrap_content"
                android:layout_height="0.6dp"
                android:background="@color/grayStrip_bg" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="vertical">


                <com.acumengroup.ui.textview.GreekTextView
                    android:id="@+id/txt_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Are you sure you want to delete this Watchlist group ?"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/white" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.acumengroup.ui.button.GreekButton
                        android:id="@+id/btn_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:background="@drawable/single_line_border_bajaj"
                        android:gravity="center"
                        android:text="Confirm"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <com.acumengroup.ui.button.GreekButton
                        android:id="@+id/btn_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:background="@drawable/single_line_border_bajaj_gray"
                        android:gravity="center"
                        android:text="Cancel"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>