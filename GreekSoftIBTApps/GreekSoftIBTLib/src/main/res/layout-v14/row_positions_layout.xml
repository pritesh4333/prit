<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent_layout"
    android:background="@color/bajaj_black"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/symbol_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:gravity="start"
                android:maxLines="1"
                android:singleLine="true"
                android:text="SYMBOL NAME"
                android:textColor="@color/white">

            </com.acumengroup.ui.textview.GreekTextView>

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/qty"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:gravity="start"
                android:maxLines="1"
                android:singleLine="true"
                android:text="QTY NAME"
                android:textColor="@color/white">

            </com.acumengroup.ui.textview.GreekTextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:gravity="start"
                android:maxLines="1"
                android:singleLine="true"
                android:text="AVG. PRICE"
                android:textColor="@color/white">

            </com.acumengroup.ui.textview.GreekTextView>

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/cmp"

                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:gravity="start"
                android:maxLines="1"
                android:singleLine="true"
                android:text="CMP"
                android:textColor="@color/white">

            </com.acumengroup.ui.textview.GreekTextView>


        </LinearLayout>

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/mtm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:text="MTM"

            android:textColor="@color/white">

        </com.acumengroup.ui.textview.GreekTextView>

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="ACTION"
            android:textColor="@color/white">

        </com.acumengroup.ui.textview.GreekTextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/txt_symbolName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:text="SYMBOL NAMESYMBO"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp">

            </com.acumengroup.ui.textview.GreekTextView>

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/txt_netQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="center"
                android:text="NET QTY"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp">

            </com.acumengroup.ui.textview.GreekTextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:orientation="vertical">

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/txt_todaysQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="TODAY'S QTY"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp">

            </com.acumengroup.ui.textview.GreekTextView>

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/txt_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="HOLDING/OPEN"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp">

            </com.acumengroup.ui.textview.GreekTextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:orientation="vertical">

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/txt_avgPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="AVG. PRICE"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp">

            </com.acumengroup.ui.textview.GreekTextView>

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/txt_cmp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="CMP"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp">

            </com.acumengroup.ui.textview.GreekTextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:orientation="vertical">

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/txt_Todaymtm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="MTM"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp">

            </com.acumengroup.ui.textview.GreekTextView>

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/txt_mtm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="MTM"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp">

            </com.acumengroup.ui.textview.GreekTextView>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
