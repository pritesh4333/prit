<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bajaj_black"
    android:orientation="vertical">

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_leftDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/bajaj_gray"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/layout_leftDays_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center">

                <com.acumengroup.ui.textview.GreekTextView
                    android:id="@+id/left_day_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:text="Left Days"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>

                <com.acumengroup.ui.textview.GreekTextView
                    android:id="@+id/left_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/bajaj_black"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="&lt;"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>

                <com.acumengroup.ui.textview.GreekTextView
                    android:id="@+id/txt_leftdays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/bajaj_black"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="10"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>

                <com.acumengroup.ui.textview.GreekTextView
                    android:id="@+id/right_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/bajaj_black"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="&gt;"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_graph_setting"
                    style="@style/spinner_style"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/maxprofit_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/bajaj_gray"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <com.acumengroup.ui.textview.GreekTextView
                    android:id="@+id/max_profit_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Max. Profit"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <com.acumengroup.ui.textview.GreekTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="5112580.00"
                    android:textColor="@color/green_400"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <com.acumengroup.ui.textview.GreekTextView
                    android:id="@+id/investment_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Investment"
                    android:textColor="@color/white"
                    android:textSize="14sp"></com.acumengroup.ui.textview.GreekTextView>

                <com.acumengroup.ui.textview.GreekTextView
                    android:id="@+id/txt_investment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="5112580.00"
                    android:textColor="@color/white"
                    android:textSize="14sp"></com.acumengroup.ui.textview.GreekTextView>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/maxloss_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/bajaj_gray"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <com.acumengroup.ui.textview.GreekTextView
                    android:id="@+id/maxloss_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Max. Loss"
                    android:textColor="@color/white"
                    android:textSize="14sp"></com.acumengroup.ui.textview.GreekTextView>

                <com.acumengroup.ui.textview.GreekTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="5112580.00"
                    android:textColor="@color/red_400"
                    android:textSize="14sp"></com.acumengroup.ui.textview.GreekTextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <com.acumengroup.ui.textview.GreekTextView
                    android:id="@+id/breakevens_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Breakevens"
                    android:textColor="@color/white"
                    android:textSize="14sp"></com.acumengroup.ui.textview.GreekTextView>

                <com.acumengroup.ui.textview.GreekTextView
                    android:id="@+id/txt_breakeven"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="5112580.00"
                    android:textColor="@color/white"
                    android:textSize="14sp"></com.acumengroup.ui.textview.GreekTextView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>