<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.acumengroup.ui.textview.GreekTextView
        android:layout_width="fill_parent"
        android:layout_height="5dp"/>

    <LinearLayout
        android:id="@+id/row_linear_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.acumengroup.ui.textview.GreekTextView
            android:layout_width="4dp"
            android:layout_height="fill_parent"
            android:background="@color/common_red_bg"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <com.acumengroup.ui.textview.ScrollingTextView
                    android:id="@+id/row11"
                    style="@style/ListItem.Head.First"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ellipsize="marquee"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:singleLine="true"/>

                <com.acumengroup.ui.textview.GreekTextView
                    android:id="@+id/row12"
                    style="@style/ListItem.Head.Values"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:gravity="end"/>

                <com.acumengroup.ui.textview.GreekTextView
                    android:id="@+id/row13"
                    style="@style/ListItem.Head.Values"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:layout_weight="2"
                    android:layout_marginRight="3dp"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <com.acumengroup.ui.textview.GreekTextView
                    android:id="@+id/row21"
                    style="@style/ListItem.SubHead"
                    android:layout_width="0dp"
                    android:textSize="10sp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_weight="3"/>

                <com.acumengroup.ui.textview.GreekTextView
                    android:id="@+id/row22"
                    style="@style/ListItem.SubHead"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:gravity="end"/>

                <com.acumengroup.ui.textview.GreekTextView
                    android:id="@+id/row23"
                    style="@style/ListItem.SubHead"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_weight="2"
                    android:textSize="10sp"
                    android:layout_marginRight="1dp"
                    android:gravity="end" />
               <!-- <ImageView
                    android:id="@+id/row23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add_icon"
                    android:layout_marginRight="3dp"
                    android:gravity="end"/>-->
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>