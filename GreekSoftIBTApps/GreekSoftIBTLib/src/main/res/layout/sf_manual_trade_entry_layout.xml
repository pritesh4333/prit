<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/manualParent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bajaj_black"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topheader_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bajaj_gray"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="1">

        <com.acumengroup.ui.textview.GreekTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:paddingLeft="10dp"
            android:text="Manual Trade Entry"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:src="@drawable/ic_close_white_24dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    android:gravity="center">

                    <com.acumengroup.ui.button.GreekButton
                        android:id="@+id/btn_buy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_35sdp"
                        android:layout_weight="1"
                        android:background="@color/dark_green_positive"
                        android:gravity="center"
                        android:text="BUY"

                        android:textColor="@color/white" />

                    <com.acumengroup.ui.button.GreekButton
                        android:id="@+id/btn_sell"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_35sdp"
                        android:layout_weight="1"
                        android:background="@color/grayStrip_bg"
                        android:gravity="center"
                        android:text="SELL"
                        android:textColor="@color/white" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.acumengroup.ui.textview.GreekTextView
                    android:id="@+id/markt_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Market"
                    android:textColor="@color/white" />
                <Spinner
                    android:id="@+id/spinner_mkt"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_gravity="center"
               />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <com.acumengroup.ui.textview.GreekTextView
                        android:id="@+id/marktTXT"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Mkg Seg"
                        android:textColor="@color/white" />

                    <com.acumengroup.ui.textview.GreekTextView
                        android:id="@+id/symbolTXT"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Symbol Name"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="center">

                    <Spinner
                        android:id="@+id/spinner_mkgSeg"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:gravity="center" />

                    <AutoCompleteTextView
                        android:id="@+id/edt_symbol"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:focusable="true"
                        android:gravity="start"
                        android:hint="Select Symbol"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray_border"
                        android:textSize="@dimen/_10sdp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <com.acumengroup.ui.textview.GreekTextView
                        android:id="@+id/expryTXT"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="ExpDate/Ser"
                        android:textColor="@color/white" />

                    <com.acumengroup.ui.textview.GreekTextView
                        android:id="@+id/strikeTXT"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Strike"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="center">

                    <Spinner
                        android:id="@+id/spinner_expDate"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:gravity="center" />

                    <AutoCompleteTextView
                        android:id="@+id/edt_strike"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:focusable="true"
                        android:gravity="start"
                        android:hint="Enter Strike"
                        android:inputType="number"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray_border"
                        android:textSize="@dimen/_10sdp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <com.acumengroup.ui.textview.GreekTextView
                        android:id="@+id/optionTXT"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Option Type"
                        android:textColor="@color/white" />

                    <com.acumengroup.ui.textview.GreekTextView
                        android:id="@+id/dateTXT"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Date"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="center">

                    <Spinner
                        android:id="@+id/spinner_optiontype"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:gravity="center" />

                    <com.acumengroup.ui.edittext.GreekEditText
                        android:id="@+id/edt_Date"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="start"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:hint="Select Date"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray_border"
                        android:textSize="@dimen/_10sdp"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <com.acumengroup.ui.textview.GreekTextView
                        android:id="@+id/unitTXT"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Unit "
                        android:textColor="@color/white" />

                    <com.acumengroup.ui.textview.GreekTextView
                        android:id="@+id/tradeTXT"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Trade Price"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="center">

                    <com.acumengroup.ui.edittext.GreekEditText
                        android:id="@+id/edt_unit"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:hint="00"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray_border"
                        android:textSize="@dimen/_10sdp"/>

                    <com.acumengroup.ui.edittext.GreekEditText
                        android:id="@+id/edt_price"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:hint="00"
                        android:inputType="number"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray_border"
                        android:textSize="@dimen/_10sdp">

                    </com.acumengroup.ui.edittext.GreekEditText>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <com.acumengroup.ui.textview.GreekTextView
                        android:id="@+id/strategyTXT"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Strategy Name"
                        android:textColor="@color/white" />


                    <com.acumengroup.ui.textview.GreekTextView
                        android:id="@+id/entryTXT"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Entry Type"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="center">

                    <AutoCompleteTextView
                        android:id="@+id/edt_strategyName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:hint="Enter Strategy"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray_border"
                        android:textSize="@dimen/_10sdp" />

                    <Spinner
                        android:id="@+id/spinner_entryType"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:gravity="center" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="center">

                <com.acumengroup.ui.button.GreekButton
                    android:id="@+id/btn_position"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@color/dark_green_positive"
                    android:gravity="center"
                    android:text="ADD POSITION"
                    android:textColor="@color/white" />

                <com.acumengroup.ui.button.GreekButton
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_weight="1"
                    android:background="@color/grayStrip_bg"
                    android:gravity="center"
                    android:text="CANCEL"
                    android:textColor="@color/white" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
