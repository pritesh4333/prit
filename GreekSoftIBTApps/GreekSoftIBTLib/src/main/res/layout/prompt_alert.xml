<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@color/light_black"
    android:orientation="vertical"

    android:padding="10dp"
    app:layout_collapseParallaxMultiplier="1.0">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imageCloseBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_close_white_24dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/textViewValue3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Exchange Name..."
            android:textColor="@color/white"
            android:textSize="14sp" />

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/textViewValue2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
             android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/dark_blue_positive" />

    </RelativeLayout>

    <com.acumengroup.ui.textview.GreekTextView
        android:id="@+id/textViewValue1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:text="Scrip Name..."
        android:textColor="@color/white"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/asset_layouts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Spinner
            android:id="@+id/exchangeSpin"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:transitionGroup="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/aset_layouts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Spinner
            android:id="@+id/assetTypeSpin"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="0dp"
            android:layout_marginTop="10dp"
            android:singleLine="true" />
    </LinearLayout>

    <com.acumengroup.ui.edittext.GreekEditText
        android:id="@+id/editTextPrice"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_style_alert"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:textColor="@color/white"
        android:visibility="gone">
        <!--<requestFocus />-->
    </com.acumengroup.ui.edittext.GreekEditText>

    <com.acumengroup.ui.edittext.GreekEditText
        android:id="@+id/qty_text_custom"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_style_alert"
        android:inputType="numberDecimal"
        android:maxLength="10"
        android:singleLine="true"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textColorHint="@color/red" />

    <com.acumengroup.ui.button.GreekButton
        android:id="@+id/btnCreate"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ed_clientPass"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Create"
        android:textColor="@color/white" />
