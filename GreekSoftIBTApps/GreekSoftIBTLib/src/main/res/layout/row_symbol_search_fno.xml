<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="@dimen/_5sdp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/common_red_bg" />

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:gravity="start"
            android:padding="@dimen/_3sdp"
            android:text="Stocks"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_14sdp"
            android:textStyle="normal" />


        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/tvExpiryDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text=" "
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal" />

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/buyTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_round_green_circle_24dp"
            android:gravity="center"
            android:text="B"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/sellTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_round_red_circle_24dp"
            android:gravity="center"
            android:text="S"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/chartTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_round_gray_circle_24dp"
            android:gravity="center"
            android:text="C"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/tvStrikePrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text=" "
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dip"
        android:background="@android:color/darker_gray" />

</LinearLayout>