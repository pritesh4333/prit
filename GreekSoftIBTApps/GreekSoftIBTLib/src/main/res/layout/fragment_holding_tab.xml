<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bajaj_black"
    android:orientation="vertical"
    tools:context=".BottomTabScreens.PendingTabFragment">

    <LinearLayout
        android:id="@+id/TitleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bajaj_blue"
        android:gravity="right"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/title1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="@dimen/_3sdp"
                android:singleLine="true"
                android:maxLines="1"
                android:text="HOLDING VAL"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/holdingVal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingBottom="5dp"
                android:text="00.00"
                android:paddingRight="@dimen/_3sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/title2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="@dimen/_3sdp"
                android:singleLine="true"
                android:maxLines="1"
                android:text="CURRENT VAL"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/currentVal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingRight="@dimen/_3sdp"
                android:paddingBottom="5dp"
                android:text="00.00"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/title3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="@dimen/_3sdp"
                android:text="CURRENT MTM"
                android:singleLine="true"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/currentMtm"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingRight="@dimen/_3sdp"
                android:paddingBottom="5dp"
                android:text="00.00"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ColumnLauout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bajaj_gray"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:orientation="vertical">

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/symbol_nametxt"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:gravity="start"
                android:maxLines="1"
                android:singleLine="true"
                android:text="SYMBOL NAME"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold">

            </com.acumengroup.ui.textview.GreekTextView>

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/qtytxt"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:gravity="start"
                android:maxLines="1"
                android:singleLine="true"
                android:text="QTY"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold">

            </com.acumengroup.ui.textview.GreekTextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical">

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/pricetxt"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="H.PRICE"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/_5sdp">

            </com.acumengroup.ui.textview.GreekTextView>

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/cmptxt"

                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="CMP"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/_5sdp">

            </com.acumengroup.ui.textview.GreekTextView>


        </LinearLayout>


        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/valuetxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:gravity="right"
            android:maxLines="1"
            android:singleLine="true"
            android:text="H. VALUE"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/_5sdp">

        </com.acumengroup.ui.textview.GreekTextView>

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/mtmtxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:gravity="right"
            android:maxLines="1"
            android:singleLine="true"
            android:text="MTM"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/_5sdp">

        </com.acumengroup.ui.textview.GreekTextView>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/refreshList"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="No Data Available"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/white"
            android:visibility="gone" />
    </RelativeLayout>

    <!--<TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="No SymbolName Available"
        android:textColor="@color/white"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:background="@color/bajaj_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>-->

</LinearLayout>