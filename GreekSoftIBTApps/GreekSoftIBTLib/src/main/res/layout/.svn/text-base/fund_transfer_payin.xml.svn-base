<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fundtransfer_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bajaj_black"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2">

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/segment_txt"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Segment"
            android:textColor="@color/white" />

        <Spinner
            android:id="@+id/segmentspinner"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/bankname_txt"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Bank Name"
            android:textColor="@color/white" />

        <Spinner
            android:id="@+id/banknamespinner"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/productid_txt"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Product"
            android:textColor="@color/white" />

        <Spinner
            android:id="@+id/productidspinner"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/bankacct_txt"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Bank Account"
            android:textColor="@color/white" />

        <com.acumengroup.ui.edittext.GreekEditText
            android:id="@+id/bankaccounttxt"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/backacctspinner"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2">

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/ledgeramt_txt"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Ledger Amount"
            android:textColor="@color/white" />

        <com.acumengroup.ui.edittext.GreekEditText
            android:id="@+id/ledgeramttxt"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:digits="0123456789"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/amt_txt"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Enter Amount"
            android:textColor="@color/white" />

        <com.acumengroup.ui.edittext.GreekEditText
            android:id="@+id/amttxt"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:digits="0123456789"
            android:focusable="true"
            android:hint="Enter amount"
            android:textColor="@color/white"
            android:textColorHint="@color/gray_border"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2">

        <com.acumengroup.ui.textview.GreekTextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Limit:â‚¹100000"
            android:textColor="@color/common_red_bg" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/errortxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="end"
            android:text="Bank Not Available"
            android:textColor="@color/white"
            android:visibility="gone" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.acumengroup.ui.button.GreekButton
            android:id="@+id/payinbtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Add Fund"
            android:textColor="@color/white" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2">

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/disclaimertxt"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="Disclaimer*"
            android:textColor="@color/common_red_bg" />

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/cleartxt"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="Clear"
            android:textColor="@color/common_red_bg" />


    </LinearLayout>
</LinearLayout>