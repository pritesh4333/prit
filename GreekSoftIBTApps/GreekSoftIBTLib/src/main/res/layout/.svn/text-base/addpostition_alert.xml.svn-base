<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/addposition_layout"
    android:background="@color/bajaj_black"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/postion_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="@color/bajaj_gray"
        android:orientation="horizontal"
        android:padding="5dp">

        <com.acumengroup.ui.textview.GreekTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:paddingLeft="10dp"
            android:text="Add Position Analysis"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/popup_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:src="@drawable/ic_close_white_24dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="5dp">

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/postion_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/white"
                android:text="Do you want to Add Selected Record for Position Analysis">

            </com.acumengroup.ui.textview.GreekTextView>
        </LinearLayout>




    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="5dp">

                <com.acumengroup.ui.textview.GreekTextView
                    android:id="@+id/postion_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:text="Strategy Name">

                </com.acumengroup.ui.textview.GreekTextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center"
                android:padding="10dp">


                <Spinner
                    android:id="@+id/spinner_names"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:padding="5dp" />

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2"
            android:padding="5dp">

            <com.acumengroup.ui.button.GreekButton
                android:id="@+id/yes"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_15sdp"
                android:text="YES"
                android:layout_weight="1"
                android:background="@drawable/single_line_border_bajaj"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <com.acumengroup.ui.button.GreekButton
                android:id="@+id/no"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="NO"
                android:background="@color/bajaj_gray"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>