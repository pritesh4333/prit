<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tade_summary_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bajaj_black"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <com.acumengroup.ui.textview.GreekTextView
               android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:singleLine="true"
                android:textColor="@color/white" />

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/txt_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Action"
                android:singleLine="true"
                android:textColor="@color/white" />


        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/modify_order_border" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/txt_script"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scrip"
                android:singleLine="true"
                android:textColor="@color/white" />

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:singleLine="true"
                android:textColor="@color/white" />


        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/modify_order_border" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/txn_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Txn Value"
                android:singleLine="true"
                android:textColor="@color/white" />

            <com.acumengroup.ui.textview.GreekTextView
               android:id="@+id/txt_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class"
                android:singleLine="true"
                android:textColor="@color/white" />


        </LinearLayout>


        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/modify_order_border" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp">

            <com.acumengroup.ui.textview.GreekTextView
               android:id="@+id/txt_borker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Borkerage"
                android:visibility="gone"
                android:singleLine="true"
                android:textColor="@color/white" />

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/charges"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Charges"
                android:singleLine="true"
                android:textColor="@color/white" />


        </LinearLayout>


    </LinearLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/modify_order_border"/>

</LinearLayout>
