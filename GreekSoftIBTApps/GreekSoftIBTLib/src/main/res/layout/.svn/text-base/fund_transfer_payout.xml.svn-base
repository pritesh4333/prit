<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bajaj_black"
    android:id="@+id/withdraw_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.acumengroup.ui.textview.GreekTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/withdraw_txt"
            android:text="Enter the Amount to be Withdrawn"
            android:textColor="@color/white" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="40dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/avail_fund"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Available Fund : "
                android:textColor="@color/white" />

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/txt_fund"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0.00"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/commodity_amt_txt"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Amount Requested "
                android:textColor="@color/white" />

            <com.acumengroup.ui.edittext.GreekEditText
                android:id="@+id/commodity_amt_edtxt"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:digits="0123456789"
                android:gravity="center"
                android:hint="Enter Amount (Rs)"
                android:inputType="numberDecimal"
                android:outlineAmbientShadowColor="@color/white"
                android:outlineSpotShadowColor="@color/white"
                android:shadowColor="@color/white"
                android:textColor="@color/white"
                android:textColorHighlight="@color/white"
                android:textColorHint="@color/gray_border"
                android:textColorLink="@color/white"
                android:focusable="true"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="2">

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/noncommodity_amt_txt"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Non Commodity"
                android:textColor="@color/white" />

            <com.acumengroup.ui.edittext.GreekEditText
                android:id="@+id/noncommodity_amt_edtxt"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:digits="0123456789"
                android:focusable="true"
                android:gravity="center"
                android:hint="Enter Amount (Rs)"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:outlineAmbientShadowColor="@color/white"
                android:outlineSpotShadowColor="@color/white"
                android:shadowColor="@color/white"
                android:textColor="@color/white"
                android:textColorHighlight="@color/white"
                android:textColorHint="@color/gray_border"
                android:textColorLink="@color/white"
                android:textSize="13sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/errortxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="end"
                android:text="Bank Not Available"
                android:textColor="@color/white"
                android:visibility="gone" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.acumengroup.ui.button.GreekButton
                android:id="@+id/submitbtn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="Submit"
                android:textColor="@color/white" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>