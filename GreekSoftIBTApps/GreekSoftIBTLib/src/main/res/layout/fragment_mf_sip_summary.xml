<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:background="@color/primaryBackground"
    android:orientation="vertical">

    <com.acumengroup.ui.textview.GreekTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/header_bg"
        android:gravity="center_horizontal"
        android:padding="4dp"
        android:text="Mutual Fund Summary"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/amcNamelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2">

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/amctitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="Amc Name : "
            android:textColor="@color/black"/>

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/amcNameValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="Amc Name Value"
            android:textColor="@color/list_header_text_bg"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/schemeTitlelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/schm_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="Scheme Name : "
            android:textColor="@color/black"/>

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/schemeNameValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="Scheme Value"
            android:textColor="@color/list_header_text_bg"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/schemeIsinlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/schmisin_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="Scheme ISIN : "
            android:textColor="@color/black"/>

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/schemeIsinValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="ISIN Value"
            android:textColor="@color/list_header_text_bg"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mandateIdlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/mandate_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="Mandate ID : "
            android:textColor="@color/black"/>

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/mandateIDValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="mandateID"
            android:textColor="@color/list_header_text_bg"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sipFrequencylayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/fre_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="SipFrequency : "
            android:textColor="@color/black"/>

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/sipFrequencyValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="SipFrequency Value"
            android:textColor="@color/list_header_text_bg"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/paymentModelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/payment_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="Payment Mode : "
            android:textColor="@color/black"/>

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/paymentModeValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="paymentMode Value"
            android:textColor="@color/list_header_text_bg"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/InstallmentAmountLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/sip_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="Sip Installment Amount : "
            android:textColor="@color/black"/>

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/sipInstallmentAmountValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="start"
            android:singleLine="true"
            android:text="Sip Installment Amount Value"
            android:textColor="@color/list_header_text_bg"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/noOfInstallLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/install_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="No Of Installment : "
            android:textColor="@color/black"/>

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/sipNoOfInstValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="sipNoOfInst Value"
            android:textColor="@color/list_header_text_bg"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/startdatelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/sip_start_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="Start Date : "
            android:textColor="@color/black"/>

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/sipStartDateValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="SipStartDate Value"
            android:textColor="@color/list_header_text_bg"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/enddatelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/sip_end_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="End Date : "
            android:textColor="@color/black"/>

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/sipEndDateValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="SipEndDate Value"
            android:textColor="@color/list_header_text_bg"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/transactionModelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/transaction_id_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="Transaction Mode : "
            android:textColor="@color/black"/>

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/transModeValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="Transaction Mode Value"
            android:textColor="@color/list_header_text_bg"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dpTransactionModelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/dp_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="DP Transaction Mode : "
            android:textColor="@color/black"/>

        <com.acumengroup.ui.textview.GreekTextView
            android:id="@+id/dptransModeValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="DP Transaction Mode Value"
            android:textColor="@color/list_header_text_bg"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/red_but_sel"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.acumengroup.ui.button.GreekButton
            android:id="@+id/btnConfirmOrder"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:text="CONFIRM ORDER"
            android:textColor="@color/white"/>

        <com.acumengroup.ui.button.GreekButton
            android:id="@+id/btnCancelOrder"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="CANCEL"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>