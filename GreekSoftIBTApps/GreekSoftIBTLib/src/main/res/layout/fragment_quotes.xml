                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/market_grey" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/quoteList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ListView
                    android:id="@+id/listLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:listSelector="@android:color/transparent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/listLeft"
                    android:layout_alignParentBottom="true"
                    android:background="#8b8b8b" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/listLeft"
                android:layout_alignParentBottom="true"
                android:background="#8b8b8b" />

            <com.acumengroup.ui.textview.GreekTextView
                android:id="@+id/oi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Open Interest"
                android:textColor="@color/white"
                android:textSize="16sp">

            </com.acumengroup.ui.textview.GreekTextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/listLeft"
                android:layout_alignParentBottom="true"
                android:background="#8b8b8b" />

            <RelativeLayout
                android:id="@+id/chartSection"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <LinearLayout
                    android:id="@+id/chart_layout"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical" />

                <com.acumengroup.ui.textview.GreekTextView
                    android:id="@+id/tapToExpand"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="false"
                    android:gravity="bottom"
                    android:padding="2dp"
                    android:textSize="10sp" />

                <ProgressBar
                    android:id="@+id/progressBarChart"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/newsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.acumengroup.ui.textview.GreekTextView
                    android:id="@+id/tvNews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#e1e1e1"
                    android:gravity="center_horizontal"
                    android:padding="4dp"
                    android:text="Top News"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ListView
                    android:id="@+id/newsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvNews"
                    android:listSelector="@android:color/transparent" />

                <ProgressBar
                    android:id="@+id/progressBarNews"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/include_error_msg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/parentHeader" />

</RelativeLayout>