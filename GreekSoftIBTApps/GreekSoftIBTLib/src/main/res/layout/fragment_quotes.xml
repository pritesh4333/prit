<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_drawable">

    <LinearLayout
        android:id="@+id/parentHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/exchangeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/exchange"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/asset_type"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_weight="1" />
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/horizonscroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left">

                <RadioGroup
                    android:id="@+id/btnGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/bestaskbid_new"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/ripple_effect"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingTop="3dp"
                        android:paddingRight="2dp"
                        android:paddingBottom="3dp"
                        android:singleLine="true"
                        android:text="Market"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/btnBuy"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/ripple_effect"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingTop="3dp"
                        android:paddingRight="2dp"
                        android:paddingBottom="3dp"
                        android:singleLine="true"
                        android:text="Buy"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/btnSell"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/ripple_effect"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingTop="3dp"
                        android:paddingRight="2dp"
                        android:paddingBottom="3dp"
                        android:singleLine="true"
                        android:text="Sell"
                        android:textColor="@color/white"
                        android:textSize="14sp" />


                    <RadioButton
                        android:id="@+id/btnChart"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/ripple_effect"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingTop="3dp"
                        android:paddingRight="2dp"
                        android:paddingBottom="3dp"
                        android:singleLine="true"
                        android:text="@string/POPUP_SCRIPT_CHARTS"
                        android:textColor="@color/white"
                        android:textSize="14sp" />


                    <RadioButton
                        android:id="@+id/watchlist_quote"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/ripple_effect"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingTop="3dp"
                        android:paddingRight="2dp"
                        android:paddingBottom="3dp"
                        android:singleLine="true"
                        android:text="Watchlist"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/info_quote"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/ripple_effect"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingTop="3dp"
                        android:paddingRight="2dp"
                        android:paddingBottom="3dp"
                        android:singleLine="true"
                        android:text="Info"
                        android:textColor="@color/white"
                        android:textSize="14sp" />


                    <RadioButton
                        android:id="@+id/news_quote"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/ripple_effect"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingTop="3dp"
                        android:paddingRight="2dp"
                        android:paddingBottom="3dp"
                        android:singleLine="true"
                        android:text="News"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </RadioGroup>
            </LinearLayout>
        </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/buttonlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:weightSum="3"
       >
        <Button
            android:id="@+id/btn_mkt_dept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:layout_marginTop="2dp"
            android:text="Market Depth"/>


        <Button
            android:id="@+id/btn_trade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_margin="2dp"
            android:text="Trade"/>

    <Button
        android:id="@+id/btn_opt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:layout_marginTop="2dp"
            android:text=":"/>


    </LinearLayout>



        <LinearLayout
            android:id="@+id/optionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:visibility="gone">

            <Spinner
                android:id="@+id/callputSpinner"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/expirySpinner"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/strikePriceSpinner"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.acumengroup.ui.button.GreekButton
                android:id="@+id/bestaskbid"
                customTypeFace="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/QT_BEST5_BTN" />

            <com.acumengroup.ui.button.GreekButton
                android:id="@+id/tradeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="Order" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parentHeader">

        <LinearLayout
            android:id="@+id/totalLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/quoteLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="5dp">

                <include layout="@layout/include_quote_ticker" />

