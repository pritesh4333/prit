            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_clientCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:focusable="true"
                android:textColorHint="@android:color/darker_gray">

                <com.acumengroup.ui.edittext.GreekEditText
                    android:id="@+id/usrId_text"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:cursorVisible="true"
                    android:drawableStart="@drawable/ic_person_black_24dp"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:drawablePadding="5dp"
                    android:hint="User Name"
                    android:editable="false"
                    android:focusable="false"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="10"
                    android:nextFocusDown="@+id/ed_clientPass"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@null" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_oldPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ti_clientCode"
                app:passwordToggleContentDescription="Password"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray">

                <com.acumengroup.ui.edittext.GreekEditText
                    android:id="@+id/oldPwd_text"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:cursorVisible="true"
                    android:drawableStart="@drawable/ic_lock_black_24dp"
                    android:drawableLeft="@drawable/ic_lock_black_24dp"
                    android:drawablePadding="5dp"
                    android:ems="10"
                    android:hint="@string/CP_OLD_PASSWORD_LBL_TXT"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLength="12"
                    android:nextFocusRight="@id/ed_clientTPass"
                    android:nextFocusDown="@+id/ed_clientTPass"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:password="true"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textCursorDrawable="@null" />

                <requestFocus />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_newPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ti_oldPass"
                app:passwordToggleContentDescription="Password"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray">

                <com.acumengroup.ui.edittext.GreekEditText
                    android:id="@+id/newPwd_text"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:cursorVisible="true"
                    android:drawableStart="@drawable/ic_lock_black_24dp"
                    android:drawableLeft="@drawable/ic_lock_black_24dp"
                    android:drawablePadding="5dp"
                    android:ems="10"
                    android:hint="@string/CP_NEW_PASSWORD_LBL_TXT"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLength="12"
                    android:nextFocusRight="@id/ed_clientTPass"
                    android:nextFocusDown="@+id/ed_clientTPass"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:password="true"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textCursorDrawable="@null" />

                <requestFocus />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_confirmPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ti_newPass"
                app:passwordToggleContentDescription="Password"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray">

            <com.acumengroup.ui.edittext.GreekEditText
                android:id="@+id/confirmPwd_text"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:cursorVisible="true"
                android:drawableStart="@drawable/ic_lock_black_24dp"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="Confirm Password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLength="12"
                android:nextFocusRight="@id/ed_clientTPass"
                android:nextFocusDown="@+id/ed_clientTPass"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:password="true"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textCursorDrawable="@null" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.acumengroup.ui.button.GreekButton
                android:id="@+id/updateBtn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Update"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/ti_confirmPass"
                android:background="@color/selectColor"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>